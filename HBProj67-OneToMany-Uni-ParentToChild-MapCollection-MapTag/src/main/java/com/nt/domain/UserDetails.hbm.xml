<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.nt.domain.UserDetails" table="USER_DETAILS3">
    <id name="userId" type="int">
       <generator class="increment"/>
    </id>
    <property name="firstName" length="15" type="string"/>
    <property name="address" length="15" type="string"/>
    <map name="phones"  cascade="all-delete-orphan" lazy="extra">
      <key column="unid"/>
      <map-key column="map_indx" type="string" length="10"/>
      <one-to-many class="com.nt.domain.PhoneNumber"/>
    </map>
  
  </class>

</hibernate-mapping>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
   <class name="com.nt.domain.InsurancePolicy"  table="INSURANCE_POLICY" dynamic-update="true">
     <id name="policyId"  type="int" length="5"/>
     <property  name="policyName" type="string" length="10" unique="true" />
     <property name="company" type="string" length="10"/>
     <property name="tenure" type="int" length="5"/>
     <property name="premium" type="int" length="5"/>
   </class>
</hibernate-mapping>
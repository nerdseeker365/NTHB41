<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.nt.domain.UserDetails" table="USER_DETAILS">
    <id name="userId" type="int">
       <generator class="increment"/>
    </id>
    <property name="firstName" length="15" type="string"/>
    <property name="address" length="15" type="string"/>
    <set name="phones"  cascade="all-delete-orphan" lazy="extra" inverse="true">
      <key column="unid"/>
      <one-to-many class="com.nt.domain.PhoneNumber"/>
    </set>
  
  </class>

</hibernate-mapping>
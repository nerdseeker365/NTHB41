<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.nt.domain">
   <class name="Employee" table="EMPLOYEE">
     <id name="eid"  type="int" length="7"  /> 
     <property name="firstName"   not-null="true" type="string" length="18"/>
     <property name="lastName"   type="string"  length="18"/>
     <property name="email"   type="string" unique="true" length="20"/>
     <property name="salary"   type="int" length="10"/>
  </class>

  
</hibernate-mapping>        
        